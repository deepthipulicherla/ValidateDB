<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="DatabaseValidationSuite" verbose="1" parallel="false">

    <!-- Attach Allure listener for reporting -->
    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>

    <test name="DatabaseValidationTests" preserve-order="true">
        <classes>
            <class name="tests.DbValidationTest">
                <methods>
                    <!-- Explicit ordering of test methods -->
                    <include name="testActiveUsersExist"/>
                    <include name="testDuplicateUsersExist"/>
                    <include name="testSecondHighestSalary"/>
                    <include name="testDeleteDuplicate"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>
